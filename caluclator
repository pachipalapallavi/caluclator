    }

    .calculator {
      background: #222;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.4);
      width: 300px;
    }

    .display input {
      width: 100%;
      height: 60px;
      font-size: 2rem;
      text-align: right;
      border: none;
      outline: none;
      border-radius: 10px;
      padding-right: 10px;
      margin-bottom: 10px;
      background-color: #333;
      color: white;
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    .btn {
      padding: 20px;
      font-size: 1.2rem;
      border: none;
      border-radius: 10px;
      background: #444;
      color: white;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background: #666;
    }

    .operator {
      background: #f57c00;
